@model CRUD_Demo.Models.ResetPasswordViewModel

<style>
    body {
        background-image: url('/images/3139256.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: Arial, sans-serif;
    }

    .transparent-card {
        background: rgba(255, 255, 255, 0.2); 
        backdrop-filter: blur(10px); 
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .transparent-header {
        background: rgba(13, 110, 253, 0.6); 
        border-radius: 12px 12px 0 0;
        backdrop-filter: blur(8px);
    }

    .transparent-footer {
        background: rgba(255, 255, 255, 0.15); 
        backdrop-filter: blur(8px);
    }

    .form-control {
        background: rgba(255, 255, 255, 0.7);
        border: none;
        border-radius: 8px;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 0 8px rgba(13, 110, 253, 0.5);
        }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card border-0 transparent-card" style="width: 420px;">
        <div class="text-center mb-3">
            <h3 class="mb-0">🔑 Reset Password</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="form-label fw-bold"></label>
                    <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">✅ Reset Password</button>
            </form>
        </div>

        <div class="card-footer text-center transparent-footer">
            <a asp-action="Login" class="text-decoration-none text-white">⬅ Back to Login</a>
        </div>
    </div>
</div>
