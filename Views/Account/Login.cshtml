@{
    ViewData["Title"] = "User Login / Forgot Password";
}

<style>
    body {
        background-image: url('/images/3139256.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: Arial, sans-serif;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        color: #fff;
        padding: 2rem;
        width: 400px;
    }

        .glass-card .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: #fff;
        }

            .glass-card .form-control::placeholder {
                color: #eee;
            }

        .glass-card label {
            font-weight: bold;
            color: #fff;
        }

        .glass-card a {
            color: #ffd700;
            text-decoration: none;
            cursor: pointer;
        }

            .glass-card a:hover {
                text-decoration: underline;
            }

    .btn-custom {
        background: #007bff;
        border: none;
        font-weight: bold;
    }

    .hidden {
        display: none;
    }

    .reset-link {
        background: rgba(255,255,255,0.2);
        border-radius: 8px;
        padding: 10px;
        margin-top: 10px;
    }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="glass-card">

        <div id="login-form">
            <div class="text-center mb-3">
                <h3>User Login</h3>
            </div>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="Enter your email" name="Email" required />
                </div>
                <div class="form-group mb-3">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Enter your password" name="Password" required />
                </div>
                <button type="submit" class="btn btn-custom btn-primary w-100">Login</button>
            </form>
            <div class="text-center mt-3">
                <a onclick="toggleForms()">Forgot your password?</a>
            </div>
            <div class="text-center mt-2">
                <span>Don't have an account? </span>
                <a asp-action="Register" asp-controller="Account">Register here</a>
            </div>
        </div>

        <div id="forgot-form" class="hidden">
            <div class="text-center mb-3">
                <h3>Forgot Password</h3>
            </div>
            <form asp-action="ForgotPassword" method="post">
                <div class="form-group mb-3">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="Enter your registered email" name="Email" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
            </form>
            <div class="text-center mt-3">
                <a onclick="toggleForms()">⬅ Back to Login</a>
            </div>

            @if (ViewBag.ResetLink != null)
            {
                <div class="reset-link text-center">
                    <p>For demo, click the link below to reset password:</p>
                    <a href="@ViewBag.ResetLink">@ViewBag.ResetLink</a>
                </div>
            }
        </div>

    </div>
</div>

<script>
    function toggleForms() {
        const loginForm = document.getElementById('login-form');
        const forgotForm = document.getElementById('forgot-form');
        loginForm.classList.toggle('hidden');
        forgotForm.classList.toggle('hidden');
    }
</script>
