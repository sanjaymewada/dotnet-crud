 @model CRUD_Demo.Models.ForgotPasswordViewModel

 <style>
     body {
         background-image: url('/images/3139256.jpg');
         background-size: cover;
         background-position: center;
         background-repeat: no-repeat;
         background-attachment: fixed;
     }

     .card-login {
         width: 400px;
         border-radius: 10px;
         border: 0;
         background: rgba(255, 255, 255, 0.15);
         backdrop-filter: blur(8px); 
         box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
         color: #fff; 
     }

     .card-header-login {
         border-radius: 10px 10px 0 0;
         background: rgba(0, 123, 255, 0.8); 
         color: white;
     }

     .card-body {
         background: transparent;
     }

     .card-footer {
         background: rgba(255, 255, 255, 0.2);
     }

     .form-control {
         background: rgba(255, 255, 255, 0.2);
         border: 1px solid #ccc;
         color: #fff;
     }

         .form-control::placeholder {
             color: #e0e0e0;
         }
 </style>

 <div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
     <div class="card card-login">
         <div class="text-center mb-3">
             <h4>Forgot Password</h4>
         </div>
         <div class="card-body">
             <form asp-action="ForgotPassword" method="post">
                 <div class="form-group mb-3">
                     <label asp-for="Email" class="form-label">Email</label>
                     <input asp-for="Email" class="form-control" placeholder="Enter your registered email" required />
                     <span asp-validation-for="Email" class="text-danger"></span>
                 </div>
                 <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
             </form>
         </div>
         <div class="card-footer text-center">
             <a asp-action="Login" class="text-white">Back to Login</a>
         </div>
     </div>
 </div>
